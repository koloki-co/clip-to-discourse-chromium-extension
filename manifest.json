{
  "manifest_version": 3,
  "name": "Clip To Discourse",
  "version": "0.18.0",
  "description": "Clip web pages to your personal Discourse instance via API",
  "action": {
    "default_title": "Clip to Discourse",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
